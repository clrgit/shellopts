SPEC = %(
  SYNOPSIS
    Synopsis
    are on 
    seperate lines

  DESCRIPTION
    Paragraphs
    spans over 
    multiple lines
)

lexer = ShellOpts::Lexer.new("main", SPEC)
tokens = lexer.lex
pp tokens
#puts
parser = ShellOpts::Parser.new(tokens)
program = parser.parse
program.dump(format: :debug)










